{
  "manifest_version": 3,
  "name": "Gemini System Prompt",
  "version": "1.0.4",
  "description": "Gemini 채팅 세션 시작 시 커스텀 시스템 프롬프트를 자동으로 주입합니다",
  "permissions": ["storage"],
  "host_permissions": ["https://gemini.google.com/*"],
  "content_scripts": [
    {
      "matches": ["https://gemini.google.com/*"],
      "js": ["content.js"],
      "css": ["styles.css"],
      "run_at": "document_start"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["inject.js"],
      "matches": ["https://gemini.google.com/*"]
    }
  ],
  "icons": {
    "16": "gemini-logo.png",
    "48": "gemini-logo.png",
    "128": "gemini-logo.png"
  }
}
